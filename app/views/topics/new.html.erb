

<div class="newtopic" style="background-image:url('https://images.unsplash.com/photo-1518655048521-f130df041f66?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxzZWFyY2h8MjJ8fHdlYnNpdGV8ZW58MHx8MHx8&auto=format&fit=crop&w=800&q=60')">
<h1>Please Enter Your New Course </h1>
<%= simple_form_for [@user, @topic] do |f| %>
  <%= f.input :title, class: "text-justify" %>
  <%= f.input :description, :as => :text, :input_html => { :rows => 5 , :style => 'width: 100%'} %>
  <%= f.input :pph, label: "Price (MAD)"%>
  <%= f.input :photo, as: :file , input_html: { multiple: false } %>
  <%= f.association :category  %>
  <%= f.submit "Create your new course", class: "btn btn-primary new-topic" %>
<% end %>


</div>
