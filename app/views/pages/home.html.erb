
<section class="container">
  <div id="card">
    <figure class="front">
      <div class="left-div">
        <div class="Text">
          <p class="content-name">Helping All Communities</p>
          <p class="content-title">C.</p>
          <p class="content-description">We are connecting course creators and students in a learning environment to grow and thrive in today’s digital era.
          Evolve’s platform makes the process easier, and allows for greater accessibility to master a skill and earn more income through digital courses and.</p>
        </div>
        <div class="Search">
          <section id="explore">
            <%= form_with url: topics_path, method: :get, class: "input-group" do %>
              <%= text_field_tag :q,
                params[:q],
                class: "form-control rounded p-3",
                placeholder: "What do you want to learn?"
              %>
              <%= submit_tag "Search", class: "btn btn-outline-primary p-3" %>
            <% end %>
          </section>
        </div>
        <div class="Categories">
          <% @topics.sample(3).each do |topic| %>
          <form action="/topics" method="get">
              <input type="hidden" name="q" value = "<%= topic.category.name %>"/>
              <input  type = "submit" value = "<%= topic.category.name %>" class="cat"/>
          </form>
          <% end %>
        </div>
      </div>

      <div class="right-div">
      </div>
    </figure>
    <!--<figure class="back"></figure>!-->
  </div>
</section>
