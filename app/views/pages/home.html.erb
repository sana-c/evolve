
<section class="container">
  <div id="card">
    <figure class="front">
      <div class="left-div">
        <div class="Text">
          <%# <p class="content-name">Best Education From Your Home </p> %>
          <p class="content-title">Best Education From Your Home</p>
          <p class="content-description">We are connecting course creators and students in a learning environment to grow and thrive in today’s digital era.
          Evolve’s platform makes the process easier, and allows for greater accessibility to master a skill and earn more income through digital courses and.</p>
        </div>
        <div class="Search">
          <section id="explore">
            <%= form_with url: discover_path, method: :get, class: "input-group" do %>
              <%= text_field_tag :query,
                params[:query],
                class: "form-control rounded p-3",
                placeholder: "What do you want to learn?"
              %>
              <%= submit_tag "Search", class: "btn btn-outline-primary p-3 search-new " %>
            <% end %>
          </section>
        </div>
      </div>

      <div class="right-div">
      </div>
    </figure>
    <!--<figure class="back"></figure>!-->
  </div>
</section>
<br>
<br>
<br>
<section>
  <div>
    <h3 class="title">Discover Our Categories</h3>
    <div class="Categories">
      <% @categories.sample(7).each do |category| %>
      <form action="/topics" method="get">
          <input type="hidden" name="q" value = "<%= category.name %>"/>
          <input  type = "submit" value = "<%= category.name %>" class="cat"/>
      </form>
      <% end %>
    </div>
  </div>
</section>
<br>
<br>
<br>
<section>
  <div class="teacher" style="background-image:url('<%= image_path('teaching.png') %>')">
    <div class="styling">
      <h3>Become a Mentor</h3>
      <p>Earn money, create video courses and inspire students. HeyBrain provides the tools to merchant and deliver the content, while you get to focus on your courses, and expanding your reach.</p>
    <button><strong>Start teaching Today</strong></button>
    </div>
  </div>
</section>
